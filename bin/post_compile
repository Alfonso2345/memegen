#!/usr/bin/env bash

set -eo pipefail

indent() {
  sed "s/^/       /"
}

puts-step() {
  echo "-----> $@"
}

puts-step "Running migrations..."
python manage.py db upgrade 2>&1 | indent

puts-step "Prerendering images..."
python scripts/generate_sample_images.py 2>&1 | indent
rm -rfv data/images/latest.jpg | indent
